// Firestore Security Rules for ai-vision-app
// Deploy these rules in Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // O3 Chat History - Users can only access their own chats
    match /o3_chat_history/{docId} {
      // Allow read only if user is authenticated AND owns the document
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      
      // Allow create only if user is authenticated AND setting their own userId
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
      
      // Allow update only if user owns the document AND can't change userId
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId;
      
      // Allow delete only if user owns the document
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }
    
    // Default: Deny all access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
